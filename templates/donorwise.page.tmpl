{{template "base" .}}

{{define "heading"}}
<style>
.form-control{
    margin: 0rem 1rem;
}
form{
    display: flex;
}
.details{
    margin-top: 2rem;
}
</style>
{{end}}

{{define "content"}}
<div class="details container">
        <table class="table table-light table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{range .}}
                <tr>
                    <td>{{.Name}}</td>
                    <td>{{.Amount}}</td>
                    <td>
                    <form action="/donor/details" method="get">
                        <input type="hidden" name="donor" value="{{.Name}}">
                        <input type="submit" value="Details" class="btn btn-outline-success">
                    </form>
                    </td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
{{end}}